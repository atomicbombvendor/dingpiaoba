.table {
  border: 2rpx solid darkgray;
}

.table_tr {
  border: 1px solid #e9e9e9;
  padding: 8rpx 16rpx;
  text-align: left;
}

.table_th {
  background: #e9e9e9;
}

.table_td {
  padding: 8rpx 16rpx;
  text-align: center;
  width: 40%;
}

.borde_left {
  border-left: 1px solid #e9e9e9;
}

.table_td_id {
  /* background: red; */
  justify-content: center;
