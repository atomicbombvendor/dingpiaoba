.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx; 
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.red_text {
  font-family: "微软雅黑";
  color: red;
}

.ticket_form {
  border-left-width: 10rpx;
  border-right-width: 10rpx;
  border-top-style: solid;
  border-top-width: 2rpx;
  margin-top: 20rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-bottom: 50px;
}

.notice {
  font-size: 30rpx;
}

.input_name {
  font-family: "微软雅黑";
  font-size: 30rpx;
  font-weight: bold;
}

